            React.createElement("li", null, React.createElement("a", {href: "https://www.dewa.gov.ae/en/customer/innovation/smart-initiatives/shams-dubai", className: "text-blue-700 underline", target: "_blank"}, "Shams Dubai")),
            React.createElement("li", null, React.createElement("a", {href: "https://www.mbrsic.ae/en/about/mohammed-bin-rashid-al-maktoum-solar-park/", className: "text-blue-700 underline", target: "_blank"}, "MBR Solar Park"))
