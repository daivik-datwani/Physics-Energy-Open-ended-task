        React.createElement("div", {className: "bg-white rounded-xl p-4 my-6 shadow"},
          React.createElement("strong", null, "Impact: "), "Each student ambassador helps Dubai become a world leader in clean energy."
        ),
        React.createElement(BackHomeBtn)
      );
    }

    function EnergyFuture() {
      return React.createElement("div", {className: "min-h-screen bg-purple-50 py-16 px-4 md:px-16"},
        React.createElement("h1", {className: "text-4xl font-bold mb-6 text-purple-700"}, "Dubai’s Energy Future"),
        React.createElement("p", {className: "text-lg mb-4 text-gray-800"},
          "Dubai is on track for 75% clean energy by 2050! Major investments in solar parks, batteries, green hydrogen, and smart grids are making Dubai a global model for sustainability."
        ),
        React.createElement("ul", {className: "list-disc space-y-2 mb-6 ml-6 text-gray-700"},
          React.createElement("li", null, React.createElement("b", null, "Solar goal:"), " 7,260 MW solar by 2030—we’re already halfway there!"),
          React.createElement("li", null, React.createElement("b", null, "Batteries:"), " Store clean energy for use at night."),
          React.createElement("li", null, React.createElement("b", null, "Hydrogen Innovation:"), " Dubai’s research will power future transport and green industries."),
          React.createElement("li", null, React.createElement("b", null, "Your role:"), " With every new roof and idea, students, families, and teachers can accelerate Dubai’s journey.")
        ),
        React.createElement("div", {className: "bg-white rounded-xl p-4 my-6 shadow"},
          React.createElement("strong", null, "Key Resources:"), 
