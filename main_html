    function BackHomeBtn(){
      var history = useHistory();
      return React.createElement("div", {className: "mt-12 text-center"},
        React.createElement("button", {
          className: "inline-block mt-8 px-6 py-3 rounded-full bg-gray-200 text-gray-900 hover:bg-gray-300 font-semibold shadow",
          onClick: function(){history.push("/")}}, "← Back to Home")
      );
    }

    function OldEnergyProblems() {
      return React.createElement("div", {className: "min-h-screen bg-red-50 py-16 px-4 md:px-16"},
        React.createElement("h1", {className: "text-4xl font-bold mb-6 text-red-600"}, "The Problem with Old Energy"),
        React.createElement("p", {className: "text-lg mb-4 text-gray-800"},
          "For decades, Dubai depended on fossil fuels—mostly natural gas and oil—for electricity and water. These fuels are non-renewable: they take millions of years to form, but are burned far more quickly than they can be replaced. Burning fossil fuels releases carbon dioxide (CO₂), the main greenhouse gas driving climate change."
        ),
        React.createElement("ul", {className: "list-disc space-y-2 mb-6 ml-6 text-gray-700"},
          React.createElement("li", null, "Fossil fuels pollute Dubai’s air and contribute to health issues like asthma and heat stress."),
          React.createElement("li", null, "Natural gas and oil supplies could run out, and prices go up—families pay higher DEWA bills, especially in summer."),
          React.createElement("li", null, "Physics: Only about 40% of their energy is converted to electricity—the rest is lost as waste heat."),
          React.createElement("li", null, "Polluting plants increase Dubai’s urban temperatures and environmental risk.")
        ),
        React.createElement("p", {className: "text-lg mb-5 text-gray-700"},
          "That’s why Dubai launched its Clean Energy Strategy 2050: to cut pollution, lower bills, and build a sustainable future with renewables."
        ),
        React.createElement("div", {className: "p-4 rounded-xl bg-white shadow mt-8"}, 
          React.createElement("strong", null, "Key Fact: "),
          " Dubai aims for 75% clean energy by 2050—powered by local innovation and leadership."
        ),
        React.createElement(BackHomeBtn)
      );
    }

    function SolarPhysics() {
      return React.createElement("div", {className: "min-h-screen bg-yellow-50 py-16 px-4 md:px-16"},
        React.createElement("h1", {className: "text-4xl font-bold mb-6 text-yellow-600"}, "The Physics of Solar Power"),
        React.createElement("p", {className: "text-lg mb-4 text-gray-800"},
          "Solar panels use the photovoltaic effect—a physics process where sunlight (photons) knocks electrons free in silicon cells, creating electric current to power homes. No moving parts, no burning, and little wasted energy!" 
        ),
        React.createElement("div", {className: "mb-6"},
          React.createElement("table", {className: "w-full table-auto mb-4 bg-white shadow-sm rounded"},
            React.createElement("thead", {},
              React.createElement("tr", {},
                ["Resource","Renewable?","Advantages","Disadvantages"].map(h => 
                  React.createElement("th", {className:"p-2 text-xs text-gray-600"}, h)
                )
              )
            ),
            React.createElement("tbody", {},
              [
                ["Solar PV", "Yes", "Abundant sunlight, no emissions", "Needs sunny roofs, less efficient in cloudy periods"],
                ["Wind", "Yes", "Clean, cost-effective", "Low wind in most of Dubai, best on coast"],
                ["Hydrogen", "Yes", "Clean for transport, industry", "Expensive, early-stage in Dubai"],
                ["Oil/Gas", "No", "Reliable, high output", "Pollutes, high cost, will run out"]
              ].map(row => 
                React.createElement("tr", {}, row.map(cell =>
                  React.createElement("td", {className:"p-2 text-xs text-gray-800"}, cell)
                ))
              )
            )
          )
        ),
        React.createElement("ul", {className: "list-disc space-y-2 ml-6 mb-6 text-gray-700"},
          React.createElement("li", null, "Dubai has over 330 sunny days a year, making solar extremely effective."),
          React.createElement("li", null, "Solar panels on Dubai roofs can convert up to 20% of sunlight into clean, affordable electricity."),
          React.createElement("li", null, "Physics calculation: A 5kW Dubai solar system (~25m², 20% efficiency) produces ~10,000 kWh/year, enough for a family’s annual use!")
        ),
        React.createElement("div", {className: "bg-white rounded-xl p-4 my-6 shadow"},
          React.createElement("strong", null, "Fact: "), "MBR Solar Park generates enough clean power for 500,000 homes and will reach 7,260 MW by 2030."
        ),
        React.createElement(BackHomeBtn)
      );
    }

    function SuccessStories() {
      return React.createElement("div", {className: "min-h-screen bg-green-50 py-16 px-4 md:px-16"},
        React.createElement("h1", {className: "text-4xl font-bold mb-6 text-green-700"}, "Dubai's Success Stories"),
        React.createElement("ul", {className: "list-disc space-y-2 mb-6 ml-6 text-gray-700"},
          React.createElement("li", null, 
            React.createElement("b", null, "Mohammed bin Rashid Al Maktoum Solar Park"),
            ": Now the world's largest solar park, producing enough energy for 500,000 homes, and saving Dubai up to 8 million tonnes CO₂ per year."
          ),
          React.createElement("li", null, 
            React.createElement("b", null, "Shams Dubai"),
            ": Over 8,400 buildings have joined Dubai’s rooftop solar revolution. Example: A villa in Jumeirah saved AED 850/month after going solar."
          ),
          React.createElement("li", null, 
            React.createElement("b", null, "DEWA Smart Initiatives"),
            ": Dubai offers bill calculators, smartphone apps to track clean energy, and fast permits to make going solar easy."
          )
        ),
        React.createElement("div", {className: "bg-white rounded-xl p-4 my-6 shadow"},
          "Every new solar panel replaces fossil fuel, reduces bills, improves air quality, and earns Dubai global awards for sustainable cities."
        ),
        React.createElement(BackHomeBtn)
      );
    }

